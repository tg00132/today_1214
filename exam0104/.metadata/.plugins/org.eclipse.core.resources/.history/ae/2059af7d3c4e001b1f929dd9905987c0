package exam0104;

import java.util.Scanner;

public class Exam6 {

	public static void main(String[] args) {
		Scanner s =new Scanner(System.in);
		System.out.println("N을구하시오:");
		int N=s.nextInt();
		System.out.println("M을구하시오:");
		int M=s.nextInt();
		int sum=0;
		
		for(int i=0; i<N; i++) {
			if(i%M!=0) {
				sum +=i;
			}
		}
		System.out.printf("%d",sum);
		

	}

}
