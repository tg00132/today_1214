package exam0104;

public class Exam4 {

	public static void main(String[] args) {
		int i;
		int j;
		int k;
		int num=5;
		for(i=0; i<num; i++)
		{
			for(j=0; j<4-i; j++) 
			{
				System.out.print(" ");
			}
		}
		for(j=0; j<i*2+1; j++) 
		{
			System.out.print("*");
		}
		System.out.println( );
		
		

	}

}
